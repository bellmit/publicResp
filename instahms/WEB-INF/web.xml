<?xml version="1.0" encoding="ISO-8859-1"?>


<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

	<!-- Note : distributable needs to be the first entry and is required for load balancing -->
  <distributable/>
    <listener>
        <listener-class>
            com.sun.xml.ws.transport.http.servlet.WSServletContextListener
        </listener-class>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
        <listener-class>
        	com.insta.hms.common.SessionListener
        </listener-class>
    </listener>
<!-- This should be the first filter in the chain, so that character encoding
	is set before getParameter() is called on the request object by any other
	filter -->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>com.insta.hms.common.CharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>*.htm</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>*.json</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>FlashFilter</filter-name>
    <filter-class>com.insta.hms.common.FlashFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FlashFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>NewRelicIgnoreTransactionFilter</filter-name>
    <filter-class>com.insta.hms.common.NewRelicIgnoreTransactionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NewRelicIgnoreTransactionFilter</filter-name>
    <servlet-name>default</servlet-name>
  </filter-mapping>

  <filter>
    <filter-name>RequestContextFilter</filter-name>
    <filter-class>com.bob.hms.common.RequestContextFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RequestContextFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>RequestContextFilter</filter-name>
    <url-pattern>*.htm</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>RequestContextFilter</filter-name>
    <url-pattern>*.json</url-pattern>
  </filter-mapping>

