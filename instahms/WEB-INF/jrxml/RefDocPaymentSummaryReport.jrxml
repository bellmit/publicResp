		<![CDATA[SELECT  bc.charge_group,pr.mr_no,pr.patient_id,
		get_patient_name(pd.salutation, pd.patient_name, pd.middle_name, pd.last_name) as patient_full_name, b.bill_no,
bc.amount as billamount,bc.discount, bc.paid_amount, bc.referal_amount  as doctoramount ,
(case when pr.reference_docto_id like('DOC%') then (select doctor_name from doctors where
doctor_id=pr.reference_docto_id) else (select referal_name from referral
where referal_no=pr.reference_docto_id) end)  as payee_name, b.finalized_date , chargegroup_name
FROM bill_charge bc JOIN bill b using(bill_no)
JOIN patient_registration pr ON pr.patient_id = b.visit_id
JOIN patient_details pd ON pd.mr_no = pr.mr_no
JOIN chargegroup_constants cgc on cgc.chargegroup_id=bc.charge_group
where bc.referal_amount>0 and  b.status in ('F','S','C') and
date(b.finalized_date) between $P{fromDate} and $P{toDate} $P!{groupFilter} order by reference_docto_id, chargegroup_name]]>
