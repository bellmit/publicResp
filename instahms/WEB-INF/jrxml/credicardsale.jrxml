	<queryString>
		<![CDATA[select 
case when  type='S' then coalesce(sum(pms.amount),0) else 0.0 end as sale ,
case when  type='R' then coalesce(sum(pms.amount),0) else 0.0 end as Return ,
case when  type='S' then (select coalesce(sum(discount),0) from pharmacy_medicine_sales_main join bill_receipts b using(bill_no) where b.payment_mode='R' and  type='S' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date) <= '$P!{toDate}') 
when  type='R' then (select coalesce(sum(discount),0) from pharmacy_medicine_sales_main join bill_receipts b using(bill_no) where b.payment_mode='R' and type='R' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date) <= '$P!{toDate}') end as discount 
from pharmacy_medicine_sales pms join pharmacy_medicine_sales_main using(sale_id)
join bill_receipts b using(bill_no) where b.payment_mode='R'
and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date) <= '$P!{toDate}'
group by type
union
select 
case when  type='S' then coalesce(sum(pms.amount),0) else 0.0 end as sale ,
case when  type='R' then coalesce(sum(pms.amount),0) else 0.0 end as Return ,
case when  type='S' then (select coalesce(sum(discount),0) from pharmacy_medicine_sales_main join bill_refunds b using(bill_no) where b.payment_mode='R' and  type='S' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date) <= '$P!{toDate}') 
when  type='R' then (select coalesce(sum(discount),0) from pharmacy_medicine_sales_main join bill_refunds b using(bill_no) where b.payment_mode='R' and type='R' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date) <= '$P!{toDate}') end as discount 
from pharmacy_medicine_sales pms join pharmacy_medicine_sales_main using(sale_id)
join bill_refunds b using(bill_no) where b.payment_mode='R'
and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date) <= '$P!{toDate}'
group by type]]>
	</queryString>
