name="transfering" scriptletClass="com.insta.hms.common.JRCommonScriptlet" pageWidth="595" pageHeight="842" whenNoDataType="NoDataSection" columnWidth="535"
leftMargin="20" rightMargin="20" topMargin="0" bottomMargin="0">
	<parameter name="fromDate" class="java.sql.Date"/>
	<parameter name="toDate" class="java.sql.Date"/>
	<parameter name="decimalplaces" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[select coalesce(sum(
(round((ssd.package_cp/sitd.issue_base_unit),2)*std.qty)),0) as amt
from store_transfer_main stm
JOIN store_transfer_details std USING(transfer_no)
JOIN store_item_details  sitd  USING(medicine_id)
JOIN store_stock_details ssd USING(item_batch_id)
JOIN stores s ON(stm.store_from= s.dept_id)
JOIN stores st ON ( stm.store_to=st.dept_id)
where st.dept_id=ssd.dept_id
and date_trunc('day',stm.date_time) >= '$P!{fromDate}' and date_trunc('day',stm.date_time)
 <= '$P!{toDate}']]>
	</queryString>
	<field name="amt" class="java.math.BigDecimal">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
