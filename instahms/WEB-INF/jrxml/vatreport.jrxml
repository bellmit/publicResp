		<![CDATA[SELECT pms.tax_rate,sum(amount-tax) as bill_amount,sum(tax)as tax_amount,
	sum(amount)as total_amount,pmsm.type,dept_name,hcm.center_name,hcm.tin_number as center_tin,
	s.pharmacy_tin_no as store_tin,ig.item_group_name as tax_groups_name,isb.item_subgroup_name as tax_subgroups_name
FROM store_sales_details pms
	JOIN store_sales_main pmsm on(pms.sale_id=pmsm.sale_id)
	JOIN stores s on pmsm.store_id=s.dept_id
	LEFT JOIN hospital_center_master hcm ON (hcm.center_id = s.center_id)
	JOIN store_sales_tax_details sstd on sstd.sale_item_id = pms.sale_item_id
	JOIN item_sub_groups_tax_details isgtd on isgtd.item_subgroup_id = sstd.item_subgroup_id
	JOIN item_sub_groups isb on isb.item_subgroup_id = isgtd.item_subgroup_id
	JOIN item_groups ig on ig.item_group_id = isb.item_group_id
WHERE date(sale_date) between $P{fromDate} AND $P{toDate}
	AND ('$P!{store_id}' = '*' OR dept_id::character varying = $P{store_id})
	AND ('$P!{store_type_id}' = '*' OR s.store_type_id::character varying = $P{store_type_id})
	$P!{centerClause}
GROUP BY dept_name,pmsm.type,pms.tax_rate,hcm.center_name,hcm.tin_number,s.pharmacy_tin_no,ig.item_group_name,isb.item_subgroup_name
ORDER BY dept_name,pmsm.type desc,pms.tax_rate]]>
