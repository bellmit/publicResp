	<queryString>
		<![CDATA[SELECT CASE WHEN r.tpa_id IS NOT NULL THEN 'S' ELSE r.receipt_type END AS payment_type, CASE WHEN r.is_settlement THEN 'S' ELSE 'A' END AS recpt_type, br.receipt_no, br.display_date, r.amount,
 pm.payment_mode, ctm.card_type, r.bank_name, r.reference_no, r.remarks
FROM receipts r JOIN bill_receipts br ON (r.receipt_id = br.receipt_no) 
 JOIN bill b USING(bill_no)
 JOIN payment_mode_master pm ON (r.payment_mode_id = pm.mode_id)
 LEFT JOIN card_type_master ctm ON (r.card_type_id = ctm.card_type_id)
WHERE bill_no = $P{billNo} $P!{receiptFilter}]]>
