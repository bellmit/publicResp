name="sales" pageWidth="595" pageHeight="842" whenNoDataType="NoDataSection" columnWidth="535" leftMargin="20" rightMargin="20" topMargin="0"
bottomMargin="0" scriptletClass="com.insta.hms.common.JRCommonScriptlet">
	<parameter name="fromDate" class="java.sql.Date"/>
	<parameter name="toDate" class="java.sql.Date"/>
	<parameter name="decimalplaces" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[select
case when  type='S' then coalesce(sum(amount),0) else 0.0 end as sale ,
case when  type='R' then coalesce(sum(amount),0) else 0.0 end as Return ,
case when  type='S' then (select coalesce(sum(discount),0) from store_sales_main where type='S' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)
 <= '$P!{toDate}')
when  type='R' then (select coalesce(sum(discount),0) from store_sales_main where type='R' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)
 <= '$P!{toDate}') end as discount ,
case when  type='S' then (select coalesce(sum(round_off),0) from store_sales_main where type='S' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)
 <= '$P!{toDate}')
when  type='R' then (select coalesce(sum(round_off),0) from store_sales_main where type='R' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)
 <= '$P!{toDate}') end as round_off
from store_sales_details join store_sales_main using(sale_id)
where date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)
 <= '$P!{toDate}'
group by type]]>
	</queryString>
