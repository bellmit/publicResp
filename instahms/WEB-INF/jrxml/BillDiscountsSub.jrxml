	<parameter name="billNo" class="java.lang.String" isForPrompting="false">
		<defaultValueExpression><![CDATA["BL000063"]]></defaultValueExpression>
	</parameter>
	<parameter name="chargeHead" class="java.lang.String[]" isForPrompting="false"/>
	<parameter name="detailed" class="java.lang.String" isForPrompting="false"/>
	<parameter name="chargeGroup" class="java.lang.String" isForPrompting="false"/>
	<queryString>
		<![CDATA[
SELECT bc.posted_date, chc.chargehead_id, chc.chargehead_name, cgc.chargegroup_name, act_description,
 discount, (amount - insurance_claim_amount) as patient_amount, insurance_claim_amount
FROM bill_charge bc
 JOIN bill b USING (bill_no)
 JOIN chargegroup_constants cgc ON cgc.chargegroup_id=bc.charge_group
 JOIN chargehead_constants chc ON chc.chargehead_id=bc.charge_head
WHERE b.bill_no = $P{billNo} AND bc.status!='X' AND 
(
 ( ($P{detailed} = 'DET' OR $P{detailed} = 'CHS' OR $P{detailed} = 'SUM')
   AND discount != 0
	 AND ($P{chargeGroup} = 'ALL' OR $X{IN, bc.charge_head ,chargeHead})
 )
 OR 
 ($P{detailed} = 'INS'
   AND bc.charge_head = 'BIDIS' AND bc.insurance_claim_amount != 0
 )
 OR
 ($P{detailed} = 'PAT'
   AND bc.charge_head = 'BIDIS' AND (bc.amount - bc.insurance_claim_amount) != 0
 )
)
ORDER by b.bill_no, cgc.display_order, chc.display_order, bc.posted_date]]>
	</queryString>
