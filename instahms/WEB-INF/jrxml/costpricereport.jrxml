	<queryString>
		<![CDATA[select
0.00 as sale,0.00 as Return,
case when  type='S' then coalesce(sum(amount),0) else 0.0 end as mrpsale ,
case when  type='R' then coalesce(sum(amount),0) else 0.0 end as mrpReturn,
case when  type='S' then (select coalesce(sum(discount-round_off),0) from store_sales_main where type='S' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)
 <= '$P!{toDate}')
when  type='R' then (select coalesce(sum(discount-round_off),0) from store_sales_main where type='R' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)
 <= '$P!{toDate}') end as discount
from store_sales_main pmsm join store_sales_details pms using(sale_id)
where date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)
 <= '$P!{toDate}'
group by type
union
select
case when  type='S' then coalesce(sum(cost_value),0) else 0.00 end as sale,
case when  type='R' then coalesce(sum(cost_value),0) else 0.00 end as Return,
0.00 as mrpsale, 0.00 as mrpReturn, 0.00 as discount
FROM store_sales_main pmsm
JOIN store_sales_details pms USING(sale_id)
WHERE date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date) <= '$P!{toDate}'
group by type]]>
	</queryString>
