	<parameter name="decimalplaces" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[select
case when  type='S' then coalesce(sum(amount),0) else 0.0 end as sale ,
case when  type='R' then coalesce(sum(amount),0) else 0.0 end as Return ,
case when  type='S' then (select coalesce(sum(discount),0) from store_sales_main join bill b using(bill_no)
where b.bill_type='C' and type='S' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)<= '$P!{toDate}')
when  type='R' then (select coalesce(sum(discount),0) from store_sales_main join bill b using(bill_no)
where b.bill_type='C' and type='R' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)<= '$P!{toDate}')
end as discount ,
case when  type='S' then (select coalesce(sum(round_off),0) from store_sales_main join bill b using(bill_no)
where b.bill_type='C' and type='S' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)<= '$P!{toDate}')
when  type='R' then (select coalesce(sum(round_off),0)
from store_sales_main join bill b using(bill_no)
where b.bill_type='C' and type='R' and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)<= '$P!{toDate}')
end as round_off
from store_sales_details join store_sales_main using(sale_id)
join bill b using(bill_no)  where b.bill_type='C'
and date_trunc('day',sale_date) >= '$P!{fromDate}' and date_trunc('day',sale_date)<= '$P!{toDate}'
group by type]]>
	</queryString>
